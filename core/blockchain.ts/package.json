{
  "name": "blockchain.ts",
  "version": "0.0.0",
  "homepage": "https://github.com/resoftware-org/blockchain-az/tree/main/core/blockchain.ts#readme",
  "description": "Blockchain.ts is a TypeScript wrapper for Web3 operations",
  "author": "re:Software S.L <devs@resoftware.es>",
  "license": "LGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/resoftware-org/blockchain-az/issues"
  },
  "main": "dist/src/Blockchain.js",
  "types": "dist/types/src/Blockchain.d.ts",
  "files": [
    "dist/*",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prettier": "prettier --check ./src ./tests",
    "lint:fix": "prettier --write ./src ./tests",
    "lint": "npm run prettier ; eslint src/ --ext .ts && eslint tests/ --ext .ts",
    "docs": "npx typedoc --out \"docs/`npm run version --silent`\" src/Blockchain.ts",
    "prebuild": "rimraf dist/ ; npm run lint",
    "build": "tsc",
    "test": "ts-mocha --paths -p tsconfig.json \"tests/**/*.spec.ts\""
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^20.11.17",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "chai": "^4.3.6",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "highlight.js": ">=10.4.1",
    "mocha": "10.0.0",
    "rimraf": "3.0.2",
    "sinon": "^14.0.0",
    "ts-mocha": "10.0.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "4.1.0",
    "typedoc": "^0.22.15",
    "typescript": "~4.5.5",
    "utf8": "3.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "no-console": "off",
      "no-debugger": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-empty-interface": "off",
      "@typescript-eslint/no-inferrable-types": "off"
    },
    "overrides": [
      {
        "files": [
          "**/tests/**/*.spec.ts"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "contributors": [
    {
      "name": "Gr√©gory Saive",
      "email": "greg@evi.as"
    },
    {
      "name": "Rebecca Natterer",
      "email": "son@dhealth.foundation"
    }
  ]
}
