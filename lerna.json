{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "install": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "version": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "conventionalCommits": false 
    }
  },
  "packages": ["core/*", "use-cases/*"]
}
